# IL Insurance Hook - Testnet Configuration
# Copy this to .env and fill in your values

# RPC & Keys
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=YOUR_PRIVATE_KEY_WITHOUT_0x
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Uniswap V4 Core (leave empty to deploy new PoolManager)
# POOL_MANAGER_ADDRESS=0xYourSepoliaPoolManagerAddress

# Hook Parameters
FEE_BPS=2           # premium: 2 bps on swaps
THRESHOLD_BPS=100   # 1% IL threshold

# Network
CHAIN=sepolia

# Test Tokens (for end-to-end testing)
# TOKEN0=0x...
# TOKEN1=0x...
